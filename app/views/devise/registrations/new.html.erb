<body class="bg">
<div class="loginOuter">
  <div class="loginContainer">
    <h2> CV Maker </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="outerField">
        <img src="/images/user.png" style="height: 20px; width: 20px;">
        <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>
      </div>

      <div class="outerField">
        <img src="/images/password.png" style="height: 20px; width: 20px;">
        <div class="field">
          <% if @minimum_password_length %>
          <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>
      </div>

      <div class="outerField">
        <img src="/images/confirmPassword.png" style="height: 20px; width: 20px;">
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>

  </div>
</div>
</body>

