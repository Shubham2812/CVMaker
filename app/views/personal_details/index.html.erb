<h1>Listing Personal Details</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Pin</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personal_details.each do |personal_detail| %>
      <tr>
        <td><%= personal_detail.user_id %></td>
        <td><%= personal_detail.name %></td>
        <td><%= personal_detail.dob %></td>
        <td><%= personal_detail.phone %></td>
        <td><%= personal_detail.address %></td>
        <td><%= personal_detail.city %></td>
        <td><%= personal_detail.pin %></td>
        <td><%= personal_detail.designation %></td>
        <td><%= personal_detail.description %></td>
        <td><%= personal_detail.photo %></td>
        <td><%= link_to 'Show', personal_detail %></td>
        <td><%= link_to 'Edit', edit_personal_detail_path(personal_detail) %></td>
        <td><%= link_to 'Destroy', personal_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

