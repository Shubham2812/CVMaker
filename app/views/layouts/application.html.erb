<!DOCTYPE html>
<html>
<head>
  <title>CVMaker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="header"> 
		<img src="/images/Title.png" style="height: 70px; width: 100px;">
		<div class="title">
			<% if user_signed_in? %>
			  Logged in as <strong><%= current_user.email %></strong>
			  <%= link_to 'Edit Profile', edit_user_registration_path, :id => 'navbar-link-signup' %>
			  <%= link_to "Logout", destroy_user_session_path, method: :delete, :id => 'navbar-link-login'  %>
			<% else %>
			  <%= link_to "Login", new_user_session_path, :id => 'navbar-link-login'  %>
			  <%= link_to "Sign up", new_user_registration_path, :id => 'navbar-link-signup'  %>
			<% end %>			
		</div>
	</div>

	<% if user_signed_in? %>
		<ul class="links">
		  <li> <a href="/home/index"> Home </a> </li>
		  <li> <a href="/profile"> Profile </a> </li>
		  <li> <a href=""> Contact </a> </li>
		  <li> <a href=""> About </a> </li>
		</ul>
	<% end %>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>
